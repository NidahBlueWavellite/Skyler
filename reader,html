  <script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.16.105/pdf.min.js"></script>

  <style>
    body {
      margin: 0;
      background-color: #0d2a3a;
      color: white;
      font-family: 'Segoe UI', sans-serif;
      display: flex;
      flex-direction: column;
      height: 100vh;
    }

    .toolbar {
      display: flex;
      align-items: center;
      gap: 10px;
      background: #082133;
      padding: 8px 16px;
      position: sticky;
      top: 0;
      z-index: 10;
    }

    .toolbar button, .toolbar input {
      background-color: #eee;
      border: none;
      padding: 6px 10px;
      border-radius: 4px;
      cursor: pointer;
      color: #0d2a3a;
      font-weight: 600;
    }

    .toolbar input[type="number"] {
      width: 60px;
      text-align: center;
    }

    #pdf-container {
      flex: 1;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 18px;
      gap: 14px;
    }

    canvas {
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.5);
      border-radius: 4px;
      width: auto;
      max-width: 95vw;
    }
